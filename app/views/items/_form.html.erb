<h4>Add an item</h4>

<%= form_for (@item) do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'sr-only' %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter a new item" %>
  </div>
  <div class="form-group">
  <%= f.submit "Save Item", class: 'btn btn-success' %>
</div>
<% end %>
